doctype html
html(lang="ru")
    head
        - var seo = {title: 'Бонусы', description: 'Описание бонусов', keywords: 'Ключи бонусов'}
        include includes/_meta
    body
        - var profileClass = '_active'
        include includes/_header

        main.main
            .breadcrumbs
                .container
                    .breadcrumbs__list-wrapper._profile
                        a.breadcrumbs__mobile(href="index.html")
                            svg(width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg")
                                use(xlink:href="#svg-arrow")
                            | Главная

                        a.compare__clear.breadcrumbs__exit(href="index.html") Выход
                            span.compare__clear-circle

            section.section._pt0
                .container
                    .cabinet-nav
                        ul.cabinet-nav__list
                            li
                                a(href="profile.html") Мои данные
                            li
                                a(href="orders.html") Заказы
                            li._active
                                a(href="bonuses.html") Бонусы

                        a.compare__clear.cabinet-nav__exit(href="index.html") Выход
                            span.compare__clear-circle

                    .bonus.bonus__head
                        .bonus__title.bonus__fixed Ваши бонусы
                        .bonus__amount._total 5 000 ₽
                        ul.bonus__list
                            li * Начисляются за покупки
                            li * Бонусы не сгорают

                    .bonus
                        .bonus__cols
                            .bonus__col
                                .bonus__date.bonus__fixed 21 сентября 2020
                                .bonus__amount._green + 2 000 ₽
                            .bonus__col.bonus__info Начисление за заказ № 917

                    .bonus
                        .bonus__cols
                            .bonus__col
                                .bonus__date.bonus__fixed 21 сентября 2020
                                .bonus__amount._red - 500 ₽
                            .bonus__col.bonus__info Списание за заказ № 917

                    .bonus
                        .bonus__cols
                            .bonus__col
                                .bonus__date.bonus__fixed 21 сентября 2020
                                .bonus__amount._red + 2 000 ₽
                            .bonus__col.bonus__info Начисление за заказ № 917

        include includes/_footer

        - var panelProfileClass = '_active';
        include includes/_panel

        include includes/_svg

        include includes/_modal

        include includes/_scripts