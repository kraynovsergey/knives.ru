doctype html
html(lang="ru")
    head
        - var seo = {title: 'Каталог', description: 'Описание каталога', keywords: 'Ключи каталога'}
        include includes/_meta
    body
        include includes/_header

        main.main
            include includes/_breadcrumbs

            section.section.catalog-page._pt0
                .container
                    h1.h1 Каталог

                    .catalog-page__block
                        .catalog-page__title Категории

                        .catalog-page__categories
                            each val, index in ['Складные ножи ', 'Разделочные ножи ', 'Авторские ножи ', 'Складные ножи ', 'Разделочные ножи ', 'Авторские ножи ', 'Складные ножи ', 'Разделочные ножи ', 'Авторские ножи ', 'Авторские ножи ']
                                if index < 3
                                    - var i = index + 1
                                else
                                    - var i = 1
                                .catalog-page__category
                                    .categories-carousel__item
                                        a.categories-carousel__title._catalog(href="catalog.html")= val
                                            sup 34
                                        picture.categories-carousel__picture
                                            source(type="image/webp" srcset="img/tmp/categories-carousel-" + i + "@2x.webp 2x, img/tmp/categories-carousel-" + i + ".webp 1x")
                                            source(type="image/png" srcset="img/tmp/categories-carousel-" + i + "@2x.png 2x, img/tmp/categories-carousel-" + i + ".png 1x")
                                            img(src="img/tmp/categories-carousel-" + i + ".png" alt=""+ val +"" width="220" height="140")

                    .catalog-page__block
                        .catalog-page__title Подборки

                        ul.header-catalog__tags._grey
                            each val, index in ['Топ - 10', 'Новинки', 'Хиты', 'Подарочные', 'Тактические', 'Дамасская сталь', 'Новинки', 'Хиты']
                                li
                                    a(href="catalog.html")= val

                    .catalog-page__block
                        .catalog-page__title Бренды

                        ul.header-catalog__tags._beige
                            each val, index in ['Victorinox', 'Eden', 'Leatherman', 'Hultafors', 'BergHOFF', 'Samura']
                                li
                                    a(href="catalog.html")= val

                    .catalog-page__block
                        .catalog-page__title По цене

                        ul.header-catalog__tags._blue
                            each val, index in ['до 1 000 ₽', '1 000 ₽ - 2 000 ₽', '1 000 ₽ - 2 000 ₽', '2 000 ₽ - 5 000 ₽', '5 000 ₽ - 10 000 ₽', 'от 10 000 ₽']
                                li
                                    a(href="catalog.html")= val

        include includes/_footer

        include includes/_panel

        include includes/_svg

        include includes/_modal

        include includes/_scripts